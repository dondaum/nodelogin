<h1> All users </h1>
{{#if messages}}
<div class="alert alert-success" role="alert">
  {{ messages }}
</div>
{{/if}}
<div class="table-responsive">
    <table class="table table-striped table-dark">
    <thead>
        <tr>
        <th scope="col">id</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Age </th>
        <th scope="col">Details </th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
        <td>{{id}}</td>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{username}}</td>
        <td>{{email}}</td>
        <td>{{age}}</td>
        <td><a href="users/{{id}}" class="btn btn-info" role="button">Show user</a></td>
        <td>
            <form method="POST" action="users/{{id}}?_method=DELETE">
            <button type="submit" class="btn btn-danger" >Delete</button>
            </form>
        </td>
        </tr>
        {{/each}} 
    </tbody>
    </table>
</div>
<a href="users/new" class="btn btn-primary" role="button">Create a new user</a>